# ==================================
# DATABASE
# ==================================
DATABASE_URL="postgresql://username:password@localhost:5432/campus_cms"

# ==================================
# JWT CONFIGURATION
# ==================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ==================================
# FIREBASE ADMIN SDK (for Student Auth)
# ==================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"

# ==================================
# EMAIL DOMAIN RESTRICTION (for Students)
# ==================================
# Only students with this email domain can sign up
ALLOWED_EMAIL_DOMAIN="@college.edu"

# ==================================
# ADMIN SEED CREDENTIALS
# ==================================
# These are used to create the initial admin user
# CHANGE THESE IN PRODUCTION!
ADMIN_EMAIL="admin@campus.edu"
ADMIN_PASSWORD="Admin@123456"
ADMIN_USERNAME="admin"

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=3001
NODE_ENV="development"
